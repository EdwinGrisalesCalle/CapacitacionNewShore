@model AnsermaAirProyect.Models.Passenger

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>

    <div class="content-table">
        @*Cabecera*@
        <div class="content-table_indice">VUELOS</div>
        <div class="content-table_header">
            <div class="content-table_header_tittle col3">
                @Html.DisplayNameFor(model => model.flight.departureStation)
            </div>
            <div class="content-table_header_tittle col3">
                @Html.DisplayNameFor(model => model.name)
            </div>
            <div class="content-table_header_tittle col3">
                @Html.DisplayNameFor(model => model.lastName)
            </div>
        </div>
        @*cuerpo*@
        <div class="content-table_Body">
            <div class="content-table_Body_row_fixed">
