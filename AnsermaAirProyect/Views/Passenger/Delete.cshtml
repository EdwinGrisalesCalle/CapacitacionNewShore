                    @Html.DisplayFor(model => model.flight.departureStation)
                </div>
                <div class="content-table_Body_row_item col3">
                    @Html.DisplayFor(model => model.name)
                </div>
                <div class="content-table_Body_row_item col3">
                    @Html.DisplayFor(model => model.lastName)
                </div>
            </div>
