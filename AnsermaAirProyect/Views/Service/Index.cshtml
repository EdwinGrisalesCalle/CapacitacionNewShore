    <div class="content-table">
        @*Cabecera*@
        <div class="content-table_header">
            <div class="content-table_header_tittle col4">
                @Html.DisplayNameFor(model => model.passenger.name)
            </div>
            <div class="content-table_header_tittle col4">
                @Html.DisplayNameFor(model => model.price)
