@model IEnumerable<AnsermaAirProyect.Models.Flight>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="content-table">
        @*Cabecera*@
        <div class="content-table_indice">VUELOS</div>
        <div class="content-table_header">
            <div class="content-table_header_tittle col4">
                @Html.DisplayNameFor(model => model.departureDateTime)
            </div>
            <div class="content-table_header_tittle col4">
                @Html.DisplayNameFor(model => model.departureStation)
            </div>
            <div class="content-table_header_tittle col4">
                @Html.DisplayNameFor(model => model.arrivalStation)
            </div>
        </div>
        @*cuerpo*@

        <div class="content-table_Body">
            @foreach (var item in Model)
            {
                <div class="content-table_Body_row">
                    <div class="content-table_Body_row_item col4">
                        @Html.DisplayFor(modelItem => item.departureDateTime)
                    </div>
                    <div class="content-table_Body_row_item col4">
                        @Html.DisplayFor(modelItem => item.departureStation)
                    </div>
                    <div class="content-table_Body_row_item col4">
                        @Html.DisplayFor(modelItem => item.arrivalStation)
                    </div>
                    <div class="content-table_Body_row_item col4">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </div>
                </div>
            }

        </div>
    </div>
    <span class="bottom_container">
        <button>@Html.ActionLink("Create New", "Create")</button>
        <button>@Html.ActionLink("Return", "Index", "Home")</button>
    </span>
</body>
</html>
